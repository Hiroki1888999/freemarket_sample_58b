.registration-wrapper
  .header-step1
    = link_to "" do
      = image_tag '/mercari-logo.svg', class:"mercari-logo"
    .header-step1__signup-bar
      %ol
        %li.through
          会員情報
          .progress-status
        %li.through
          電話番号認証
          .progress-status
        %li.active
          お届け先住所入力
          .progress-status
        %li
          支払い方法
          .progress-status
        %li
          完了
          .progress-status
  .registration-main
    .registration-main__box
      .registration-main__box__title
        %b
          住所入力
      .registration-main__box__form-area
        = form_for(@user, url: new_user_payment_path, method: :get) do |f|
          .registration-main__box__form-area__content
            = f.fields_for :profile do |profile|
              .registration-main__box__form-area__content__group
                %p
                  お名前
                %span
                  必須
                = profile.text_field :last_name_kanji, autocomplete: "last_name_kanji", placeholder: "例) 山田", value:"#{session[:profile]["last_name_kanji"]}"
                = profile.text_field :first_name_kanji, autocomplete: "first_name_kanji", placeholder: "例) 彩", value:"#{session[:profile]["first_name_kanji"]}"
              .registration-main__box__form-area__content__group
                %p
                  お名前カナ
                %span
                  必須
                = profile.text_field :last_name_kana, autocomplete: "last_name_kana", placeholder: "例) ヤマダ", value:"#{session[:profile]["lastname_kana"]}"
                = profile.text_field :first_name_kana, autocomplete: "first_name_kana", placeholder: "例) アヤ", value:"#{session[:profile]["firstname_kana"]}"
            = f.fields_for :user_address do |u_address|
              .registration-main__box__form-area__content__group
                = u_address.label :postal_code, '郵便番号'
                %span
                  必須
                = u_address.number_field :postal_code, autocomplete: "postal_code", placeholder: '例) 123-4567'
              .registration-main__box__form-area__content__group
                = u_address.label :prefecture, '都道府県'
                %span
                  必須
                = u_address.collection_select :prefecture_id, Prefecture.all, :id, :name, {prompt: "--", selected: session[:address]["prefecture_id"]}
              .registration-main__box__form-area__content__group
                = u_address.label :city, '市町村'
                %span
                  必須
                = u_address.text_field :city, autocomplete: "city", placeholder: '例) 横浜市緑区'
              .registration-main__box__form-area__content__group
                = u_address.label :block_number, '番地'
                %span
                  必須
                = u_address.text_field :block_number, autocomplete: "block_number", placeholder: "例）青山1-1-1"
              .registration-main__box__form-area__content__group
                = u_address.label :building_name, '建物名'
                %span.any
                  任意
                = u_address.text_field :building_name, autocomplete: "building_name", placeholder: "例) 柳ビル103"
              .registration-main__box__form-area__content__group
                = u_address.label :phone_number, '電話'
                %span.any
                  任意
                = u_address.phone_field :phone_number, placeholder: "例）09012345678"
                = f.submit "次へ進む", class: 'next-btn'
  = render 'shared/signup-footer'