.wrapper
  = render 'shared/header'
  .header-bottom__bread__crumbs
    .bread-crumbs
      - breadcrumb :listing
      = breadcrumbs separator: " ＞ "
  .content-area
    = render 'shared/left-area'
    .content-area__listing-content-area
      .content-area__listing-content-area__listing-content-head
        出品した商品
      .content-area__listing-content-area__listing-status
        .content-area__listing-content-area__listing-status__status-listing
          .content-area__listing-content-area__listing-status__status-listing__listing-text
            出品中
          .content-area__listing-content-area__listing-status__status-listing__listing-content
            - @item.each do |item|
              .status-listing__listing-content__1
                .status-listing__listing-content__1__1-imege
                  = link_to image_tag(item.images.first.image.url), mypage_listings_show_listing_of_items_on_sale_path(item.id)
.footer
  = render 'shared/footer'
  = render 'shared/button'