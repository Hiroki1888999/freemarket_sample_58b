.registration-wrapper
  .header-step1
    = link_to "" do
      %img{alt: "登録画面mercariマーク", src: "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?2482339763"}
    .header-step1__signup-bar
      %ol
        %li.through
          会員情報
          .progress-status
        %li.through
          電話番号認証
          .progress-status
        %li.active
          お届け先住所入力
          .progress-status
        %li
          支払い方法
          .progress-status
        %li
          完了
          .progress-status
  .registration-main
    .registration-main__box
      .registration-main__box__title
        %b
          住所入力
      .registration-main__box__form-area
        .registration-main__box__form-area__content
          .registration-main__box__form-area__content__group
            %label{for: ""}
              お名前
            %span
              必須
            %input{name: "first_name_kanji", placeholder: "例) 山田", type: "text", value: ""}
            %input{name: "last_name_kanji", placeholder: "例) 彩", type: "text", value: ""}
          .registration-main__box__form-area__content__group
            %label{for: ""}
              お名前カナ
            %span
              必須
            %input{name: "first_name_kana", placeholder: "例) ヤマダ", type: "text", value: ""}
            %input{name: "last_name_kana", placeholder: "例) アヤ", type: "text", value: ""}
          .registration-main__box__form-area__content__group
            %label{for: "postal_code"}
              郵便番号
            %span
              必須
            %input{name: "postal_code", placeholder: "例) 123-4567", type: "", value: ""}
          .registration-main__box__form-area__content__group
            %label{for: "prefecture"}
              都道府県
            %span
              必須
            %select.prefecture{name: "prefecture"}
              %option{value: "1"} 北海道
              %option{value: "2"} 東京都
          .registration-main__box__form-area__content__group
            %label{for: "city"}
              市町村
            %span
              必須
            %input{name: "city", placeholder: "例）横浜市緑区", type: ""}
          .registration-main__box__form-area__content__group
            %label{for: "block_number"}
              番地
            %span
              必須
            %input{name: "block_number", placeholder: "例）青山1-1-1", type: ""}
          .registration-main__box__form-area__content__group
            %label{for: "building_name"}
              建物名
            %span.any
              任意
            %input{name: "building_name", placeholder: "例）青山1-1-1", type: ""}
          .registration-main__box__form-area__content__group
            %label{for: ""}
              電話
            %span.any
              任意
            %input{name: "", placeholder: "例）09012345678", type: ""}
          %button.next-btn{type: "submit"}
            次へ進む
  = render 'shared/signup-footer'