.registration-wrapper
  .header-step1
    = link_to root_path do
      = image_tag '/mercari-logo.svg', class:"mercari-logo"
    .header-step1__signup-bar
      %ol
        %li.through
          会員情報
          .progress-status
        %li.through
          電話番号認証
          .progress-status
        %li.through
          お届け先住所入力
          .progress-status
        %li.active
          支払い方法
          .progress-status
        %li
          完了
          .progress-status
  .registration-main
    .registration-main__box
      .registration-main__box__title
        %b
          支払い方法
      .registration-main__box__form-area
        .registration-main__box__form-area__content
          = form_for @credit_card, url: signup_index_path, method: :post do |f|
            .registration-main__box__form-area__content__group
              = f.label :card_number, 'カード番号'
              %span
                必須
              = f.number_field :card_number, placeholder: "半角数字のみ"
              = image_tag '/card-img.png', width:'100%'
            .registration-main__box__form-area__content__group
              = f.label :'有効期限'
              %span
                必須
              %br
            .card-expiry
              = f.select :expiry_month, [["01"], ["02"], ["03"], ["04"], ["05"], ["06"], ["07"], ["08"], ["09"], ["10"], ["11"], ["12"]]
              %span
                月
              %br
              = f.select :expiry_year, [["19",2019],["20",2020],["21",2021],["22",2022],["23",2023],["24",2024],["25",2025],["26",2026],["27",2027],["28",2028],["29",2029]]
              %span
                年
            .registration-main__box__form-area__content__group
              = f.label :security_code, 'セキュリティコード'
              %span
                必須
              = f.number_field :security_code, placeholder: "カード背面4桁もしくは3桁の番号"
              %p.text-right
                カード裏面の番号とは?
            = f.submit "次へ進む", class: 'next-btn'
  = render 'shared/signup-footer'