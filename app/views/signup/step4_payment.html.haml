.registration-wrapper
  .header-step1
    = link_to "" do
      = image_tag '/mercari-logo.svg', class:"mercari-logo"
    .header-step1__signup-bar
      %ol
        %li.through
          会員情報
          .progress-status
        %li.through
          電話番号認証
          .progress-status
        %li.through
          お届け先住所入力
          .progress-status
        %li.active
          支払い方法
          .progress-status
        %li
          完了
          .progress-status
  .registration-main
    .registration-main__box
      .registration-main__box__title
        %b
          支払い方法
      .registration-main__box__form-area
        .registration-main__box__form-area__content
          .registration-main__box__form-area__content__group
            %label{for: "card_number"}
              カード番号
            %span
              必須
            %input{name: "card_number", placeholder: "半角数字のみ", type: "text", value: ""}
            = image_tag '/card-img.png', width:'100%'
          .registration-main__box__form-area__content__group
            %label{for: ""}
              有効期限
            %span
              必須
            %br
          .card-expiry
            %select{name: "expiry_month"}
              %option{value: "1"} 01
              %option{value: "2"} 02
              %option{value: "3"} 03
              %option{value: "4"} 04
              %option{value: "5"} 05
              %option{value: "6"} 06
              %option{value: "7"} 07
              %option{value: "8"} 08
              %option{value: "9"} 09
              %option{value: "10"} 10
              %option{value: "11"} 11
              %option{value: "12"} 12
            %span
              月
            %br
            %select{name: "expiry_year"}
              %option{value: "2019"} 2019
              %option{value: "2020"} 2020
              %option{value: "2021"} 2021
              %option{value: "2022"} 2022
              %option{value: "2023"} 2023
              %option{value: "2024"} 2024
              %option{value: "2025"} 2025
            %span
              年
          .registration-main__box__form-area__content__group
            %label{for: "security_code"}
              セキュリティコード
            %span
              必須
            %input{name: "security_code", placeholder: "カード背面4桁もしくは3桁の番号", type: "text", value: ""}
            %p.text-right
              カード裏面の番号とは?
          %button.next-btn{type: "submit"}
            次へ進む
  = render 'shared/signup-footer'