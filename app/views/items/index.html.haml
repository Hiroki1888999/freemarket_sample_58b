.wrapper
  = render 'shared/header'

  .main-wrapper
    .srider
      %img{src: "//www-mercari-jp.akamaized.net/assets/img/featured/camp/index/index_keyvisual.png?2482339763"}
    .popularity
      %h2
        人気のカテゴリー
      .popularity__category
        %ul.popularity__category__list
          %li.popularity__category__list__name
            %a
              レディース
          %li.popularity__category__list__name
            %a
              メンズ
          %li.popularity__category__list__name
            %a
              家電・スマホ・カメラ
          %li.popularity__category__list__name
            %a
              おもちゃ・ホビー・グッズ

    .category-items
      .category-items__erea
        .category-items__erea__header
          %h3.new-item
            レディース新着アイテム
        %a.more{href:""}
          もっと見る ＞
      .category-items__erea__list
        - @ladies_items.each do |item|
          .category-items__erea__list__item
            .category-items__erea__list__item__box
              .category-items__erea__list__item__box__image
                -# = image_tag item.images.image
              .category-items__erea__list__item__box__price
                = item.price
              .category-items__erea__list__item__box__caption
                = item.name

      .category-items__erea
        .category-items__erea__header
          %h3.new-item
            メンズ新着アイテム
        %a.more{href:""}
          もっと見る ＞
      .category-items__erea__list
        - @mens_items.each do |item|
          .category-items__erea__list__item
            .category-items__erea__list__item__box
              .category-items__erea__list__item__box__image
                -# = item.images.first.image
              .category-items__erea__list__item__box__price
                = item.price
              .category-items__erea__list__item__box__caption
                = item.name


      .category-items__erea
        .category-items__erea__header
          %h3.new-item
            家電・スマホ・カメラ新着アイテム
        %a.more{href:""}
          もっと見る ＞
      .category-items__erea__list
        - @home_appliance_items.each do |item|
          .category-items__erea__list__item
            .category-items__erea__list__item__box
              .category-items__erea__list__item__box__image
                -# = item.images.first.image
              .category-items__erea__list__item__box__price
                = item.price
              .category-items__erea__list__item__box__caption
                = item.name


      .category-items__erea
        .category-items__erea__header
          %h3.new-item
            おもちゃ・ホビー・グッズ新着アイテム
        %a.more{href:""}
          もっと見る ＞
      .category-items__erea__list
        - @toy_items.each do |item|
          .category-items__erea__list__item
            .category-items__erea__list__item__box
              .category-items__erea__list__item__box__image
                -# = item.images.first.image
              .category-items__erea__list__item__box__price
                = item.price
              .category-items__erea__list__item__box__caption
                = item.name


    .bottom-image
      %img{src: "//web-jp-assets.mercdn.net/_next/static/images/download_app_bg-b57d6f1a32f2aebd89cf6f43bc2e4b39.jpg"}

